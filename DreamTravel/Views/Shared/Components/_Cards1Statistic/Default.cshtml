<div class="col-lg-4 col-md-4 order-1">
    <div class="row">
        <div  class="col-lg-6 col-md-12 col-6 mb-4">
            <div style="height:203px" class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <img src="~/sneat-1.0.0/assets/img/icons/unicons/chart-success.png"
                                 alt="chart success"
                                 class="rounded" />
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Tur Sayısı</span>
                    <h3 class="card-title mb-2">@ViewBag.dcount</h3>
                    <small class="text-success fw-semibold"><i class='bx bx-check'></i>@ViewBag.adcount Adet Aktif Tur</small>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <img src="~/sneat-1.0.0/assets/img/icons/unicons/wallet-info.png"
                                 alt="Credit Card"
                                 class="rounded" />
                        </div>
                    </div>
                    <span>Mesaj Sayısı</span>
                    <h3 class="card-title text-nowrap mb-1"> @ViewBag.ucount</h3>
                    <small class="text-info fw-semibold"><i class='bx bx-right-arrow-alt'></i>Bu Ay Gelen Mesaj Sayısı @ViewBag.umcount</small>
                </div>
            </div>
        </div>
    </div>
</div>