@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    Layout = null;
}
<!doctype html>
<html lang="zxx">

@await Html.PartialAsync("/Views/LayoutPartial/_HeaderPartial.cshtml")
<body>
    @*    @await Html.PartialAsync("/Views/LayoutPartial/_NavbarPartial.cshtml")
    *@

    <header id="site-header" class="fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg stroke">
                <h1>
                    <a class="navbar-brand mr-lg-5" href="/Default/Index/">
                        DreamTravel
                    </a>
                </h1>
                <!-- if logo is image enable this
                <a class="navbar-brand" href="#index.html">
                    <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
                </a> -->
                <button class="navbar-toggler  collapsed bg-gradient" type="button" data-toggle="collapse"
                        data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                    <span class="navbar-toggler-icon fa icon-close fa-times"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Default/Index/">@localizer["Ana Sayfa"] <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/About/Index">@localizer["Seyahatler"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Destination/Index/">@localizer["Rehberler"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Guide/Index/">@localizer["Hakkımızda"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact/Index/">@localizer["İletişim"]</a>
                        </li>

                    </ul>
                </div>
                <div class="d-lg-block d-none">
                    <a href="contact.html" class="btn btn-style btn-secondary">Rezervasyon Yap</a>
                </div>

                <ul style="padding-left:1em" class="nav navbar-nav float-right">
                    <li class="dropdown dropdown-language nav-item">
                        <a class="dropdown-toggle nav-link" id="dropdown-flag" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i id="current-flag" class="flag-icon"></i>
                            <span class="selected-language"></span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdown-flag">
                            <div class="arrow_box">
                                <a class="dropdown-item" href="?culture=tr">
                                    <i class="flag-icon flag-icon-tr"></i> Turkish
                                </a>
                                <a class="dropdown-item" href="?culture=en">
                                    <i class="flag-icon flag-icon-us"></i> English
                                </a>
                                <a class="dropdown-item" href="?culture=cn">
                                    <i class="flag-icon flag-icon-cn"></i> Chinese
                                </a>
                                <a class="dropdown-item" href="?culture=ru">
                                    <i class="flag-icon flag-icon-ru"></i> Russian
                                </a>
                                <a class="dropdown-item" href="?culture=fr">
                                    <i class="flag-icon flag-icon-fr"></i> French
                                </a>
                                <a class="dropdown-item" href="?culture=es">
                                    <i class="flag-icon flag-icon-es"></i> Spanish
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>

                <div class="mobile-position">
                    <nav class="navigation">
                        <div class="theme-switch-wrapper">
                            <label class="theme-switch" for="checkbox">
                                <input type="checkbox" id="checkbox">
                                <div class="mode-container">
                                    <i class="gg-sun"></i>
                                    <i class="gg-moon"></i>
                                </div>
                            </label>
                        </div>
                    </nav>
                </div>
            </nav>
        </div>
        @RenderSection("message",false)
    </header>
    @RenderBody()
    @await Html.PartialAsync("/Views/LayoutPartial/_FooterPartial.cshtml")
    @await Html.PartialAsync("/Views/LayoutPartial/_ScriptsPartial.cshtml")
</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // URL'deki sorgu parametrelerini alın
        const params = new URLSearchParams(window.location.search);
        let culture = params.get('culture');

        // Eğer culture 'en' ise, bayrak simgesi 'us' olarak ayarlanır
        if (culture === 'en') {
            culture = 'us';
        }
        // Eğer culture boşsa, Türkiye bayrağı gösterilir
        if (!culture) {
            culture = 'tr';
        }
        // Bayrak simgesini güncelle
        if (culture) {
            const flagElement = document.getElementById('current-flag');
            flagElement.className = 'flag-icon flag-icon-' + culture;
        }
    });
</script>