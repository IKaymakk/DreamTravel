@model DreamTravel.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kayıt</title>
    <link rel="stylesheet" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/base/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/css/style.css">
    <link rel="shortcut icon" href="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                            </div>
                            <h4>Kayıt Ol</h4>
                            <h6 class="font-weight-light">Saniyeler İçinde Hesap Oluştur</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Name" type="text" placeholder="İsim" class="form-control form-control-lg border-left-0">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Surname" type="text" placeholder="Soyisim" class="form-control form-control-lg border-left-0">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                    <div class="input-group">

                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-email-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Mail" type="text" placeholder="Mail Adresi" class="form-control form-control-lg border-left-0">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="UserName" placeholder="Kullanıcı Adı" class="form-control form-control-lg border-left-0">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Password" type="password" placeholder="En Az 5 Karakterlik Şifre Girin" class="form-control form-control-lg border-left-0" id="exampleInputPassword">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="ConfirmPassword" type="password" placeholder="Şifreyi Onaylayın" class="form-control form-control-lg border-left-0" id="exampleInputPassword">
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="">Kayıt Ol</button>
                                    <div class="text-danger" asp-validation-summary="ModelOnly">

                                    </div>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabın Var Mı? <a href="/Login/SignIn" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 register-half-bg d-flex flex-row">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/base/vendor.bundle.base.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/off-canvas.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/hoverable-collapse.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/template.js"></script>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
