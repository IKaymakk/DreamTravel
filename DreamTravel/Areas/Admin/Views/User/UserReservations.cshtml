@model List<EntityLayer.Concrete.Reservation>
@{
    ViewData["Title"] = "UserReservations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h4 class="card-header">@ViewBag.Name @ViewBag.Surname Adlı Kullanıcının Rezervasyonları</h4>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tur Adı</th>
                    <th>Kişi Sayısı</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var x in Model)
                {
                    sayac += 1;
                    <tr>
                        <td><strong>@sayac</strong></td>
                        <td>@x.Destination.City</td>
                        <td>@x.PersonCount</td>
                        <td>@x.ReservationDate.ToShortDateString()</td>
                        <td><span class="badge bg-label-primary me-1">@x.Status</span></td>
                        <td ><a href="/Admin/User/UserReservationDetails"><i class="bx bxs-detail me-1"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
