@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card mb-4">
    <form method="post">
        <h5 class="card-header text-primary">@ViewBag.ID Numaralı Rol</h5>
        <div class="card-body demo-vertical-spacing demo-only-element">
            <div class="input-group">
                <input asp-for="RoleName" type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon11" />
            </div>
            <button class="btn btn-outline-primary">Kaydet</button>
        </div>
        <input asp-for="RoleID" type="hidden" readonly="readonly" />
    </form>
</div>

