@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <form style="margin-left:1em;padding-bottom:1em" method="post">
        <h5 class="card-header text-primary">@ViewBag.Kullanici Numaralı Kullanıcının Rolü</h5>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleID">
                <input type="hidden" asp-for="@Model[i].RoleName">
                <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input">
                <label class="form-check-label" asp-for="@Model[i].RoleExist">@Model[i].RoleName</label>
            </div>
        }
        <br />
        <button class="btn btn-outline-primary">Değişiklikleri Kaydet</button>
        <br />
    </form>
</div>



