@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>CQRS Tur Veriler</h1>
<br />

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Tur Süresi</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@x.city</td>
            <td>@x.duration</td>
            <td>$@x.price</td>
            <td>@x.personcapacity</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-info">Yeni Tur Ekle</a>

